#
# A wrapper for m4, as is appropriate for preprocessing .vxm4 files.
#

# Usage: run_m4 

use strict;
use warnings;

my $pwd = `pwd`;
chomp $pwd;

($#ARGV >= 0) or die "Usage: $0 <m4 args> <in-file>";

my $vxm4_file = pop;
my @m4_args = @ARGV;

use FindBin ();


# This must be kept in sync with run_svxpp.
my $cmd = "cat $FindBin::Bin/m4_config.m4 $vxm4_file | $FindBin::Bin/pre_m4 | /usr/intel/bin/m4 --prefix-builtins -I $FindBin::Bin/../m4 @m4_args | $FindBin::Bin/post_m4";
# --synclines
print STDERR "DEBUG: Running: $cmd\n";
!system($cmd) or die "$cmd failed.";
