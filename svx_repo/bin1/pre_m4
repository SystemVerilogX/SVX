#
#
# A stream preprocessor to run prior to m4 for SVX.
#
# Run with no args.  Transforms stdin to stdout.
#
# Transforms code as in the following example:
# STDIN:
#    m4+foo(args)
#
# STDOUT:
#    m4_foo("   ",['source_file.vxm4'],<line-number>,['m4+foo(args)'],args)

use strict;
use warnings;

while(<STDIN>) {
  $_ =~ s/^([ !] +)(m4\+(\w+)\((.*))/$1m4_$3\(\['$1'\],\['m4___file__'\],m4___line__,\['$2'\],$4/;
  print $_;
}
